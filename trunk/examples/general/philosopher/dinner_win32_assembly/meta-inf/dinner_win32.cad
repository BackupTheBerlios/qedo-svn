        <componentfile id="observer_file">
            <fileinarchive name="dinner_ObserverImpl.zip"/>
        </componentfile>
    </componentfiles>

    <partitioning>
	<processcollocation>
        <homeplacement id="pHome">
	        <componentfileref idref="philosopher_file"/>
			<componentimplref idref="UUID-1E42D587-648D-4B2C-BD3F-A11BFF295B4F"/>
