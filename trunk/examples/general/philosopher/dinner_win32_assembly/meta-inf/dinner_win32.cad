	        </componentinstantiation>
	        <destination></destination>
	</homeplacement>
	</processcollocation>

	<processcollocation>


	    <homeplacement id="cHome">
	        <componentfileref idref="cutlery_file"/>
			<componentimplref idref="UUID-0A1FBCDC-D196-41F0-AAFE-8015C32C51A1"/>
