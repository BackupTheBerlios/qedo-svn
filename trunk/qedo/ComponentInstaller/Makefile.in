error "No xerces"
else
CPPFLAGS += -I${XERCESDIR}/include
LIBS += -L${XERCESDIR}/lib -lxerces-c
endif

LDLIBS = ${LIBS}

#SOURCE_C = libunzip.c

SOURCES = CatalogResolver.cpp \
          ComponentImplementation.cpp \
			 ComponentInstallationImpl.cpp \
			 DOMTreeErrorReporter.cpp \
			 DOMXMLParser.cpp \
          NameServiceBase.cpp \
			 Package.cpp \
			 PlatformBase.cpp \
			 XMLCatalog.cpp \
			 libunzip.cpp \
			 ci.cpp 

OBJS = ${SOURCES:.cpp=.o} ${SOURCE_C:.c=.o}

.PHONY:all

all: ci

ci.cpp : main.cpp
	@LN_S@ $^ $@

ci: $(OBJS)

.PHONY:install

install: ci

