include ../MakeVars

CXX = @CXX@
CPPFLAGS+=-I. -I../ComponentIDL -I../ComponentContainer @CPPFLAGS@ 
CXXFLAGS+=$(CPPFLAGS) @DEFS@ @CXXFLAGS@
CXXCOMPILE=@CXX@ $(CXXFLAGS)
LIBS+=@LIBS@
CC=$(CXX)


@SET_MAKE@

LIBS += -L../ComponentIDL -lComponent\
