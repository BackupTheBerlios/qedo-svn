CXX = @CXX@
INCLUDES+=-I. -I../ComponentIDL \
          -I../ComponentContainer \
          -I../ComponentInstaller \
	  -I../qedoutil \
	 $(NAMING_INCLUDES) \
	 @XERCES_INCLUDES@

CXXFLAGS+=$(INCLUDES) @DEFS@ @CXXFLAGS@
CXXCOMPILE=@CXX@ $(CXXFLAGS)
LIBS+=@LIBS@
CC=$(CXX)

@SET_MAKE@

LIBS += -L../ComponentIDL -lComponentIDL \
        -L../ComponentContainer -lComponentContainer \
	-L../qedoutil -lqedoutil \
	$(NAMING_LIBS) \
	@XERCES_LIBS@ -lodbc

LDLIBS = ${LIBS}

SOURCES = qdeploy.cpp

OBJS = ${SOURCES:.cpp=.o}

CLEAN_FILES = ${SOURCES:.cpp=.o} qdeploy

include ../MakeVars

.PHONY:all

all: qdeploy

qdeploy: $(OBJS)
	$(LINK.o) $^ $(LOADLIBES) $(LDLIBS) -o $@

.PHONY:install

install: install-prog

.PHONY:install-prog

install-prog: qdeploy

