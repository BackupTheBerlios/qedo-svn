include ../MakeVars

CXX = @CXX@

CPPFLAGS+=-I. -I../ComponentIDL -I../ComponentContainer -I../ComponentInstaller @CPPFLAGS@ 
CXXFLAGS+=$(CPPFLAGS) @DEFS@ @CXXFLAGS@
CXXCOMPILE=@CXX@ $(CXXFLAGS)
LIBS+=@LIBS@
CC=$(CXX)

@SET_MAKE@


LIBS += -L../ComponentIDL -lComponent -luuid

ifeq "${ORB}" "MICO_ORB"
LIBS += $(shell mico-config --cosslibs)
CPPFLAGS += -I$(shell mico-config --prefix)/include/coss
endif
LIBS += -L../ComponentIDL -lComponent \
           -L../ComponentContainer -lComponentContainer 

LDLIBS = ${LIBS}

SOURCES = ComponentServerImpl.cpp \
			 ClientInterceptorDispatcher.cpp \
			 ServerInterceptorDispatcher.cpp \
			 ORBInitializerImpl.cpp \
          cs.cpp \
			 ../ComponentInstaller/NameServiceBase.cpp

OBJS = ${SOURCES:.cpp=.o}

.PHONY:all

all: cs

cs.cpp : main.cpp
	@LN_S@ $^ $@

cs: $(OBJS)

.PHONY:install

install: cs
