.NOTPARALLEL:

prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@

SUBDIRS = ComponentIDL \
	  StreamComponentIDL \
	  ComponentContainer \
	  qedoutil\
	  ComponentInstaller \
	  ComponentServer \
	  ComponentServerActivator \
	  AssemblyFactory \
	  HomeFinder \
	  DeploymentClient \
	  etc

all: $(SUBDIRS:%=%-all)

.PHONY: install-dir

$(bindir):
	mkdir -p $@

$(exec_prefix)/etc:
	mkdir -p $@

$(exec_prefix)/lib:
	mkdir -p $@

$(exec_prefix)/include:
	mkdir -p $@

$(exec_prefix)/idl:
	mkdir -p $@

install-dir: $(bindir) $(exec_prefix)/etc $(exec_prefix)/lib $(exec_prefix)/include $(exec_prefix)/idl

install: install-dir $(SUBDIRS:%=%-install)

clean: $(SUBDIRS:%=%-clean)

%-all: %
	$(MAKE) -C $< all

%-install: %
	$(MAKE) -C $< install

%-clean: %
	$(MAKE) -C $< clean
