CXX = @CXX@
INCLUDES+=-I. -I../ComponentIDL \
          -I../ComponentContainer \
          -I../ComponentInstaller \
			 $(NAMING_INCLUDES)
CXXFLAGS+=$(INCLUDES) @DEFS@ @CXXFLAGS@
CXXCOMPILE=@CXX@ $(CXXFLAGS)
LIBS+=@LIBS@
CC=$(CXX)

@SET_MAKE@

LIBS += -L../ComponentIDL -lComponentIDL\
        -L../ComponentContainer -lComponentContainer \
		  $(NAMING_LIBS)

LDLIBS = ${LIBS}

SOURCES =  DeploymentClient.cpp \
           qdeploy.cpp
SOURCES_EXTERN = ../ComponentInstaller/NameServiceBase.cpp 

OBJS = ${SOURCES:.cpp=.o} ${SOURCES_EXTERN:.cpp=.o}


CLEAN_FILES = ${SOURCES:.cpp=.o} qdeploy

include ../MakeVars

.PHONY:all

all: qdeploy

qdeploy: $(OBJS)

.PHONY:install

install: install-prog

.PHONY:install-prog

install-prog: qdeploy

