CXX = @CXX@
INCLUDES+=-I. -I../ComponentIDL \
          -I../ComponentContainer \
			 -I../ComponentInstaller \
			 $(NAMING_INCLUDES) \
			 @XERCES_INCLUDE@ 
CXXFLAGS+=$(INCLUDES) @DEFS@ @CXXFLAGS@
CXXCOMPILE=@CXX@ $(CXXFLAGS)
LIBS+=@LIBS@
CC=$(CXX)

@SET_MAKE@

LIBS += -L../ComponentIDL -lComponentIDL\
        -L../ComponentContainer -lComponentContainer \
		  $(NAMING_LIBS) \
		  @XERCES_LIBS@

LDLIBS = ${LIBS}

SOURCES =   Assembly.cpp \
				AssemblyFactory.cpp \
				Properties.cpp \
				StandardConfigurator.cpp \
				assf.cpp 

SOURCES_EXTERN = ../ComponentInstaller/XMLCatalog.cpp \
				../ComponentInstaller/libunzip.cpp \
				../ComponentInstaller/CatalogResolver.cpp \
				../ComponentInstaller/DOMTreeErrorReporter.cpp \
				../ComponentInstaller/DOMXMLParser.cpp \
				../ComponentInstaller/NameServiceBase.cpp \
				../ComponentInstaller/Package.cpp \
				../ComponentInstaller/PlatformBase.cpp 

OBJS = ${SOURCES:.cpp=.o} ${SOURCES_EXTERN:.cpp=.o}


CLEAN_FILES = ${SOURCES:.cpp=.o} assf

include ../MakeVars

.PHONY:all

all: assf

assf: $(OBJS)

.PHONY:install

install: install-prog

.PHONY:install-prog

install-prog: assf

